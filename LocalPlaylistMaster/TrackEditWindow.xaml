<Window x:Class="LocalPlaylistMaster.TrackEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalPlaylistMaster"
        mc:Ignorable="d"
        Title="TrackEditWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="50" VerticalAlignment="Bottom">
            <MediaElement x:Name="mediaElement" LoadedBehavior="Manual" MediaOpened="MediaElement_MediaOpened"/>
            <Slider x:Name="timelineSlider" Minimum="0" ValueChanged="TimelineSlider_ValueChanged" Margin="20"
                    PreviewMouseDown="TimelineSlider_PreviewMouseDown"/>
            <StackPanel HorizontalAlignment="Left">
                <Button Content="Play" Click="TogglePlay" Width="50"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
